@page
@model CS056_ASP.NET_Razor_07.Pages.ContactModel
@{
}

<h1>Contact</h1>

<form class="m-2 p-3 alert alert-danger" method="post" asp-page="Contact" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="customerInfo.CustomerName" class="form-label"></label>
        <input asp-for="customerInfo.CustomerName" class="form-control" />
        <span asp-validation-for="customerInfo.CustomerName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="customerInfo.Email" class="form-label"></label>
        <input asp-for="customerInfo.Email" class="form-control" />
        <span asp-validation-for="customerInfo.Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="customerInfo.YearOfBirth" class="form-label"></label>
        <input asp-for="customerInfo.YearOfBirth" class="form-control" />
        <span asp-validation-for="customerInfo.YearOfBirth"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FileUpload" class="form-label"></label>
        <input asp-for="FileUpload" class="form-control" />
        <span asp-validation-for="FileUpload"></span>
    </div>
    <div class="mb-3">
        <label asp-for="FileUploads" class="form-label"></label>
        <input asp-for="FileUploads" class="form-control" />
        <span asp-validation-for="FileUploads"></span>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Gửi thông tin</button>
    </div>
</form>

<p>@Model.thongbao</p>
<h1>Thông tin nhận được</h1>

@if (@Model.customerInfo != null)
{
    <ul>
        <li>User Name: @Model.customerInfo.CustomerName</li>
        <li>Email: @Model.customerInfo.Email</li>
        <li>Year Of Birth: @Model.customerInfo.YearOfBirth</li>
    </ul>
}
